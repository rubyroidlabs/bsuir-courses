<div class="inner-bg">
    <div class="container">

            <div class="row" style="margin-top: -50px">
              <div class="col-sm-6 col-sm-offset-3">

                <div class="form-box">
                    <div class="form-top">
                      <div class="form-top-left">
                        <h3>Edit this Expense</h3>
                        <% if flash.has?(:message) %>
                          <p style="color:#f0ad4e;"><%= flash[:message] %> </p>
                        <% end %>
                      </div>
                      <div class="form-top-right">
                        <i class="fa fa-pencil"></i>
                      </div>
                    </div>

                  <div class="form-bottom">
                    <form role="form" action="/expenses/<%= @expense.id%>" method="post" class="signup-form">
                      <input id="hidden" type="hidden" name="_method" value="PATCH">

                      <div class="form-group">
                        <label class="sr-only" for="form-description">Description</label>
                        <input type="text" name="description" placeholder="Description..." class="form-description form-control" id="form-description" value="<%= @expense.description%>">
                      </div>

                      <div class="form-group">
                        <label class="sr-only" for="form-amount">Amount</label>
                        <input type="text" name="amount" placeholder="Amount..." class="form-amount form-control" id="form-amount" value="<%= @expense.amount%>">
                      </div>

                      <div class="form-group">
                        <label class="sr-only" for="date">Date</label>
                        <input class="form-date" type="date" name="date" placeholder="YYYY-MM-DD" value="<%= @expense.date%>" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" title="Enter a date in this formart YYYY-MM-DD"/>
                      </div>

                      <div class="form-group">
                        <label  style="color: white; -webkit-font-smoothing: antialiased !important;" for="category">Category</label>
                        <select name="category_name">
                              <% current_user.categories_sort_by_name.each do |category| %>
                                <option  name="category_name" <%='selected' if @category.name == category.name %>><%= category.name %></option>
                              <%end%>
                        </select>
                      </div>


                        <button type="submit" class="btn">Update</button>
                    </form>
                    <br>

                    <form action="/expenses/<%= @expense.id %>/delete" method="post">
                        <input type="hidden" id="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn btn-danger">Delete Expense</button>
                    </form>

                  </div>
              </div>
            </div>


    </div>
</div>
