<div class="inner-bg">
    <div class="container">

        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 text">
              <h1 style="margin-top: -60px"><span class="glyphicon glyphicon-list-alt"></span> Welcome to Expensy</h1>
          </div>
        </div>

            <div class="row">
              <div class="col-sm-6 col-sm-offset-3">

                <div class="form-box">
                    <div class="form-top">
                      <div class="form-top-left">
                        <h3>Sign up now</h3>
                          <p><small>Fill in the form below to get instant access:</small></p>
                          <% if flash.has?(:message) %>
                            <p style="color:#f0ad4e;"><%= flash[:message] %> </p>
                          <% end %>
                      </div>
                      <div class="form-top-right">
                        <i class="fa fa-pencil"></i>
                      </div>
                    </div>

                  <div class="form-bottom">
                    <form role="form" action="/signup" method="post" class="signup-form">

                      <div class="form-group">
                        <label class="sr-only" for="form-username">Username</label>
                        <input type="text" name="username" placeholder="Username..." class="form-username form-control" id="form-username">
                      </div>

                      <div class="form-group">
                        <label class="sr-only" for="form-email">Email</label>
                        <input type="email" name="email" placeholder="Email..." class="form-email form-control" id="form-email">
                      </div>

                      <div class="form-group">
                        <label class="sr-only" for="password">Password</label>
                        <input type="password" name="password" placeholder="Password..." class="form-password form-control" id="form-password">
                      </div>
                        <button type="submit" class="btn">Sign Up!</button>
                    </form>
                    <h4 style="-webkit-font-smoothing: antialiased !important; color: white; text-align: center;">Or</h4>
                    <form class="signup-form" action="/login" method="get">
                      <button type="submit" class="btn btn-success">Log in!</button>
                    </form>
                  </div>
              </div>
            </div>


    </div>
</div>
