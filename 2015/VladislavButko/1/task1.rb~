giffs = ['file1', 'file2', 'file3', 'file4', 'file5', 'file6', 'file7', 
'file8', 'file9', 'file10', 'file11', 'file12', 'file13', 'file14', 'file15', 
'file16', 'file17', 'file18', 'file19', 'file20', 'file21', 'file22', 
'file23', 'file24', 'file25', 'file26', 'file27', 'file28', 'file29', 
'file30', 'file31']
number = 4
until number == 0
 giffs.each do |file|
  filenew = File.new file
  filenew.each do |f|
   puts f
  end
  puts 'Осталось повторов:  ' + number.to_s
  sleep 0.15
  system 'clear'
 end
 number -= 1
end
