<div class='container'>
  <div class='row align-items-center mb-1'>
    <div class='col-3 text-center'>
      <%= link_to new_article_path, class: 'btn btn-primary' do %>
        <h3>Добавить+</h3>
      <% end %>
    </div>
    <div class='col-4 offset-5'>
      <%= image_tag 'b2b_logo.png', class: 'img-fluid'%>
    </div>
  </div>
  <table class='table table-striped table-hover'>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><h3><%= article.title %></h3></td>
          <% if article.sold_bonsticks %>
            <td class='text-center pt-0 pb-0'>
              <%= image_tag 'bonstick.gif', class: 'img-fluid align-middle', size: '35x40' %>
            </td>
          <% else %>
            <td class='text-center'>
              <%= image_tag 'bitcoin.png', class: 'img-fluid', size: '40x40' %>
            </td>
          <% end %>
          <td>
            <div class='btn-group' role='group'>
          <%= link_to 'Show', article_path(article), class: 'btn btn-outline-success' %>
          <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-primary' %>
          <%= link_to 'Delete', article_path(article),
            method: :delete,
            data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
